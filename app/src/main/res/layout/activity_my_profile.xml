<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f4f4f4"
    tools:context=".MyProfile">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/app_logo_main"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/fix"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textColor="#000000"
            android:textSize="15dp"
            android:text="수정"
            android:gravity="center"
            android:layout_marginLeft="280dp"/>
    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:src="@drawable/boy"
        app:civ_border_color="#FFffff"
        app:civ_border_width="2dp"
        tools:ignore="MissingClass">

    </de.hdodenhof.circleimageview.CircleImageView>
    <TextView
        android:id="@+id/student_impo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1학년 3반 김재원"
        android:textColor="#000000"
        android:textSize="15dp"
        android:gravity="center"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/favorite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#B7B4B4"
        android:text="안드로이드,서버"
        android:gravity="center"
        android:layout_marginTop="3dp"
        android:textSize="12dp"/>
    <TextView
        android:id="@+id/github"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="https://github.com/Im-tae"
        android:textColor="#b7b4b4"
        android:gravity="center"/>

    <TextView
        android:id="@+id/introduce"
        android:layout_marginTop="5dp"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="저는 나무를 자르는것을 좋아합니다."
        android:textColor="#b7b4b4"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="수상경력"
        android:textSize="15dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="40dp"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="270dp"
        android:layout_height="110dp"
        android:background="#ffffff"
        android:layout_gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/Awards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="2019 교내 해커톤 우승"
            android:textSize="15dp"
            android:textColor="#000000"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="사용기술"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="270dp"
        android:layout_height="110dp"
        android:background="#ffffff"
        android:layout_gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/Skills"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Kotlin"
            android:textSize="15dp"
            android:textColor="#000000"/>
    </LinearLayout>
</LinearLayout>